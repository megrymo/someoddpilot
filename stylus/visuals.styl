.top-header
	text-align: center
	z-index 999

.content
	z-index 1

.logo
	display: inline-block
	margin 111px 0 130px
	width 280px
	height auto

.sop-logo
	width 100%
	height auto
	
.nav-icon
	display inline-block
	position absolute
	left 11px
	top 9px
	padding 25px
	z-index 99

.menu-line
	fill #000
	transition fill ease 1s
	
	.nav-open &
		fill #fff
	
.nav-holder
	display: inline-block
	position absolute
	height 0
	top 0
	left 0
	background #000
	padding 0 70px 0 60px
	overflow hidden
	text-align: left
	transition height ease 1s, padding ease 1s
	
	.nav-open &
		height 248px
		padding 80px 70px 72px 60px

.nav-close-icon
	position absolute
	top 10px
	right 0
	padding 25px;

.close-line
	stroke-width 2px
	stroke #000
	transition stroke ease 1s

	.nav-open &
		stroke #fff

.main-nav
	font-family: sop-sans
	font-specs(14, 14, 200)

.nav-link
	display: block
	padding 12px 0
	text-decoration none
	text-transform: uppercase
	color #000
	transition color ease 1s
	
	.nav-open &
		color #fff

.nav-link-social
	display: inline-block
	font-specs(0,0)

.slider 
	position: relative
	overflow: hidden

.slides 
	position: relative
	width 100%
	height 100%
	margin: 0
	padding: 0
	list-style: none

.slide
	position: absolute
	display: block
	width 100%
	height 100%
	background #fff

.pager
	position absolute

.home-slider
	height 100%
	
.news-article
	width (((content-width - vert-gutter - vert-gutter) / content-width) * 33.33333)%
	padding-top (vert-gutter)px
	vertical-align top
	float left
	font-specs(20, 30)

.news-article:nth-child(3n+3)
	padding-left (((vert-gutter / 2) / content-width) * 100)%
	
.news-article:nth-child(3n+1)
	padding-right (((vert-gutter / 2) / content-width) * 100)%
	
.news-article:nth-child(3n+2)
	padding (vert-gutter)px (((vert-gutter / 2) / content-width) * 100)% 0

.news-article.featured
	width 100%
	padding (big-gutter)px 0 0
	
.news-article.featured:nth-child(2)
	background #f0ede5

.news-image
	width 100%
	height auto

.featured .news-image
	padding-bottom (big-gutter)px

.featured .news-snippet
	padding-bottom (vert-gutter)px

.news-title
	font-family: sop-serif
	font-specs(22, 30)

.news-date
	margin-bottom (30 / base-font-size)em
	font-style: italic