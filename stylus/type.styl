.center-align
  text-align: center

.left-align
  text-align: left

.right-align
  text-align: right

.white-text
  color #fff

.black-text
  color $black

.sans
  font-family: $sop-sans
  font-weight: bold
  text-transform: uppercase
  line-height (30/22)em

.display-serif
  font-family: $sop-display-serif
  line-height (66/49)em

.serif
  font-family: $sop-serif
  line-height (40/24)em

.main-nav,
.page-subheader,
.news-title,
.work-section-header,
.work-section-subheader,
.chapter-name
  @extend .sans
  font-specs(22, 30, 200)

.work-section-body
  @extend .serif

.main-nav
  font-specs(14, 14, 200)

.nav-link
  text-decoration none
  text-transform: uppercase

.page-title
  display: none

.page-subheader
  text-align: center
  font-specs(20, 30, 200)

.mega-slide-text
  display: inline-block
  font-specs(90, 135, 200)
  text-shadow 0 0 75px rgba(0, 0, 0, 0.15)

.work-block
  @extend .display-serif
  color $black

.block-header,
.block-subheader
  text-decoration none !important
  color $black

.block-header
  font-specs(49, 66, 50)

.block-subheader
  font-specs(30, 40, 50)

.block-link
  font-family: "Georgia", Georgia, serif
  font-specs(18, 18, 200)
  font-weight: bold
  text-transform: uppercase
  text-decoration: none;
  border-bottom: 1px solid $black;
  color $black
  cursor pointer

.work-section-header
  font-specs(70, 90, 150)
  text-align: center

.work-section-subheader,
.chapter-name
  font-specs(28, 50, 150)
  text-align: center

.toc-header
  @extend .display-serif
  font-specs(18, (18 * 1.2))

.toc-item
  @extend .sans
  font-specs(20, 30, 200)

.chapter-number
  @extend .display-serif
  font-specs(62, 62, 50)

.chapter-copy
  @extend .display-serif
  font-specs(32, (32 * 1.2))

.big-caption
  margin 1em auto
  @extend .display-serif
  font-specs(22, 30)
  text-align: center

.grey-caption
  margin (20 / 14)em 2%
  font-family: "Georgia", Georgia, serif
  font-specs(14, 20)
  font-style: italic
  opacity 0.35
  color $black

.big-serif-header
  margin 2em auto 1em
  @extend .display-serif
  font-specs(72, 96)
  text-align: center

.work-section-body
  font-specs(24, 40)

.news-title
  color $black
  font-specs(22, 30, 100)
  text-decoration none
  cursor pointer

.news-snippet,
.news-date
  font-specs(20, 30)

.news-date
  font-style: italic

.drop-cap:first-letter
  float: left
  font-size: 2.5em;
  line-height: 0.5em;
  padding-right: 0.04em;
  padding-top: 0.28em;

.scale-text
  display: inline-block
  transform-origin: top
