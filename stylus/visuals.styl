.top-header
	text-align: center
	z-index 999

.home .top-header
	position absolute
	overflow visible
	
.logo
	display: inline-block
	margin 111px 0 130px
	width 280px
	height auto

.sop-logo
	width 100%
	height auto
	
.nav-icon
	display inline-block
	position absolute
	left 11px
	top 9px
	padding 25px
	z-index 99

.menu-line
	fill #000
	transition fill ease 1s
	
	.nav-open &
		fill #fff
	
.nav-holder
	display: inline-block
	position absolute
	height 0
	top 0
	left 0
	background #000
	padding 0 70px 0 60px
	overflow hidden
	text-align: left
	transition height ease 1s, padding ease 1s
	z-index 5
	
	.nav-open &
		height 248px
		padding 80px 70px 72px 60px

.nav-close-icon
	position absolute
	top 10px
	right 0
	padding 25px;

.close-line
	stroke-width 2px
	stroke #000
	transition stroke ease 1s

	.nav-open &
		stroke #fff

.nav-link
	display: block
	padding 12px 0
	color #000
	transition color ease 1s
	
	.nav-open &
		color #fff

.nav-link-social
	display: inline-block
	font-specs(0,0)

.page-subheader
	margin (avg(hr-gutter big-gutter) / 2)px 0

.slider 
	position: relative

.slides 
	position: relative
	width 100%
	min-height 100%
	height auto
	margin: 0
	padding: 0
	background #faf7ee
	list-style: none
	overflow hidden

.slide
	position: absolute
	display: block
	width 100%
	min-height 100%
	height auto
	overflow hidden
	
	.contained
		padding 300px 10% (big-gutter)px
		width 80%
		max-height 125%

.pager,
.prev,
.next
	position absolute
	
.prev,
.next
	padding 10px
	
.pager
	top 50%
	width 100%

.prev
	left 2%

.next
	right 2%

.counter
	position absolute
	bottom (hr-gutter)px
	font-family: "Georgia", Georgia, serif
	font-specs(18, 18)
	font-weight: bold
	text-align: right

.home-slider
	min-height 100%
	height auto

.we-are
	.contained
		margin 0
		width 50%
		overflow visible
		white-space: nowrap
	
	.display-serif
		font-specs(90, 120)

.truth-and-vision .fit-text
	font-specs(30, 35)
	
.project-preview
	display: block
	padding 0 0 (big-gutter)px
	clear both
	overflow auto
	text-align: center
	
.preview-image
	display: block
	width 100%
	height auto

.preview-image + .preview-image
	margin-top (hr-gutter)px

.preview-link
	display: inline-block
	margin-top (hr-gutter / 2)px

.news-article
	width (((content-width - vert-gutter - vert-gutter) / content-width) * 33.33333)%
	padding-top (vert-gutter)px
	vertical-align top
	float left
	
.news-date
	margin-bottom (hr-gutter/2)px

.news-article:nth-child(3n+3)
	padding-left (((vert-gutter / 2) / content-width) * 100)%
	
.news-article:nth-child(3n+1)
	padding-right (((vert-gutter / 2) / content-width) * 100)%
	
.news-article:nth-child(3n+2)
	padding (vert-gutter)px (((vert-gutter / 2) / content-width) * 100)% 0

.featured
	padding 0

.featured + .featured
	padding (avg(hr-gutter big-gutter))px 0 0
	
.featured.even
	background #f0ede5

.news-image
	width 100%
	height auto
	padding-bottom (hr-gutter)px

.featured .news-image
	padding-bottom avg(hr-gutter big-gutter)px

.featured .news-snippet
	padding-bottom (hr-gutter)px