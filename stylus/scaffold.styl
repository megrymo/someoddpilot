@font-face {
  font-family: 'sop-fontello';
  src: url('/assets/font/sop-fontello.eot?3791079');
  src: url('/assets/font/sop-fontello.eot?3791079#iefix') format('embedded-opentype'),
       url('/assets/font/sop-fontello.woff?3791079') format('woff'),
       url('/assets/font/sop-fontello.ttf?3791079') format('truetype'),
       url('/assets/font/sop-fontello.svg?3791079#sop-fontello') format('svg');
  font-weight: normal;
  font-style: normal;
}

 [class^="icon-"]:before, [class*=" icon-"]:before {
  font-family: "sop-fontello";
  font-style: normal;
  font-weight: normal;
  speak: none;

  display: inline-block;
  text-decoration: none;
  text-align: center;

  /* For safety - reset parent styles, that can break glyph codes*/
  font-variant: normal;
  text-transform: none;

  /* fix buttons height, for twitter bootstrap */
  line-height: 1em;
}

.icon-play:before { content: '\e800'; } /* '' */
.icon-close-x:before { content: '\e801'; } /* '' */
.icon-arrow-right:before { content: '\e802'; } /* '' */
.icon-arrow-left:before { content: '\e803'; } /* '' */
.icon-vimeo:before { content: '\e804'; } /* '' */
.icon-twitter:before { content: '\e805'; } /* '' */
.icon-sop-logo:before { content: '\e806'; } /* '' */
.icon-instagram:before { content: '\e807'; } /* '' */
.icon-facebook:before { content: '\e808'; }

html, body
  height: 100%;
  width 100%

body
  width 100%
  margin 0
  padding 0
  font-family sop-serif
  -webkit-font-smoothing: antialiased;

.top-header
  z-index 5

.content
  position relative
  z-index 1

.full
  width 100%
  clear both
  overflow auto

.full-height
  height 100vh

.contained,
.contained-smaller
  position relative
  width 100%
  max-width ($content-width)px
  margin 0 auto
  overflow auto
  clear both

.contained-smaller
  max-width 980px

@media screen and (max-width: ($content-width + $vert-gutter + $vert-gutter)px)
  .contained
    width 90%
    padding 0 5%

@media screen and (max-width: (980 + $vert-gutter + $vert-gutter)px)
  .contained
    width 80%
    padding 0 10%

.left,
.right
  width ((($content-width - $vert-gutter) / $content-width) * 50) %

.left
  float left
  padding-right ((($vert-gutter/2)/$content-width) * 100) %

.right
  float right
  padding-left ((($vert-gutter/2)/$content-width) * 100) %

.bottom-gutter
  margin-bottom ($hr-gutter)px

.small-bottom-gutter
  margin-bottom ($hr-gutter / 2)px

.big-bottom-gutter
  margin-bottom ($big-gutter)px

.background-fill
  position: absolute;
  top: 0;
  left: 0;

.bgwidth
  width: 100%
  height auto

.bgheight
  height: 100%
  width auto

.blue-bg
  background $blue

.yellow-bg
  background $yellow

.yellow-bg .even
  background darken(saturation($yellow, 27%), 4%)

.pink-bg
  background $pink

.image-hover .block-image
  transition 0.5s all ease
  &:hover
    opacity: 0.8
