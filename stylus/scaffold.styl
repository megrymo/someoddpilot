html, body
  height: 100%;
  width 100%

body
  width 100%
  margin 0
  padding 0
  font-family sop-serif
  -webkit-font-smoothing: antialiased;

.top-header
  z-index 5

.content
  position relative
  z-index 1

.full
  width 100%
  clear both
  overflow auto

.full-height
  height 100vh

.contained,
.contained-smaller
  position relative
  width 100%
  max-width (content-width)px
  margin 0 auto
  overflow auto
  clear both

.contained-smaller
  max-width 980px

@media screen and (max-width: (content-width + vert-gutter + vert-gutter)px)
  .contained
    width 90%
    padding 0 5%

@media screen and (max-width: (980 + vert-gutter + vert-gutter)px)
  .contained
    width 80%
    padding 0 10%

.left,
.right
  width (((content-width - vert-gutter) / content-width) * 50) %

.left
  float left
  padding-right (((vert-gutter/2)/content-width) * 100) %

.right
  float right
  padding-left (((vert-gutter/2)/content-width) * 100) %

.bottom-gutter
  margin-bottom (hr-gutter)px

.small-bottom-gutter
  margin-bottom (hr-gutter / 2)px

.big-bottom-gutter
  margin-bottom (big-gutter)px

.background-fill
  position: absolute;
  top: 0;
  left: 0;

.bgwidth
  width: 100%
  height auto

.bgheight
  height: 100%
  width auto

.blue-bg
  background #dbf1fc

.yellow-bg
  background #faf7ee

.yellow-bg .even
  background #f0ede5

.pink-bg
  background #ffecec

.image-hover .block-image
  transition 0.5s all ease
  &:hover
    opacity: 0.8
