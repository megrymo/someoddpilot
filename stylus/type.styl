.center-align
  text-align: center

.left-align
  text-align: left

.right-align
  text-align: right

.white-text
  color #fff

.black-text
  color #000

.sans
  font-family: sop-sans
  font-weight: bold
  text-transform: uppercase
  line-height (30/22)em

.display-serif
  font-family: sop-display-serif
  line-height (66/49)em

.serif
  font-family: sop-serif
  line-height (40/24)em

.main-nav,
.page-subheader,
.news-title,
.project-section-header,
.project-section-subheader
  @extend .sans
  font-specs(22, 30, 200)

.project-section-body
  @extend .serif

.main-nav
  font-specs(14, 14, 200)

.nav-link
  text-decoration none
  text-transform: uppercase

.page-title
  display: none

.page-subheader
  text-align: center
  font-specs(20, 30, 200)

.mega-slide-text
  display: inline-block
  font-specs(90, 135, 200)
  text-shadow 0 0 75px rgba(0, 0, 0, 0.2)

.project-block
  @extend .display-serif
  color #000

.block-header,
.block-subheader
  text-decoration none !important
  color #000

.block-header
  font-specs(49, 66, 50)

.block-subheader
  font-specs(30, 40, 50)

.block-link
  font-specs(18, 18, 200)
  text-transform: uppercase
  color #000
  cursor pointer

.project-section-header
  font-specs(70, 90, 150)
  text-align: center

.project-section-subheader
  font-specs(28, 50, 150)
  text-align: center

.project-section-body
  font-specs(24, 40, 25)

.news-title
  color #000
  font-specs(22, 30, 100)
  text-decoration none
  cursor pointer

.news-snippet,
.news-date
  font-specs(20, 30)

.news-date
  font-style: italic

.drop-cap:first-letter
  float: left
  font-size: 4em
  line-height: .5em
  padding-right 0.02em

.scale-text
  transform-origin: top
