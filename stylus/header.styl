.top-header
  text-align: center
  z-index 999

.header-no-push
  position absolute
  overflow visible

.header-logo
  display: inline-block
  margin 9vh 0 12vh
  padding 10px
  color: $black
  font-size: 91px

  @media screen and (max-height: (700px))
    font-size 13vh

  @media screen and (max-height: (400px))
    font-size (52 / $base-font-size)em

.nav-icon
  display inline-block
  position absolute
  left 11px
  top 9px
  padding 21px 25px
  z-index 99

  &:hover .menu-line
    margin 4px 0 5px

.menu-line
  display: block
  width 23px
  height 4px
  margin 4px 0
  background $black
  transition background ease 1s, margin ease 0.1s

  .nav-open &
    background $white

.nav-holder
  display: inline-block
  position absolute
  height 0
  top 0
  left 0
  background $black
  padding 0 66px 0 56px
  overflow hidden
  text-align: left
  transition height ease 1s, padding ease 1s
  z-index 5

  .nav-open &
    height 248px
    padding-top 80px
    padding-bottom 72px

.nav-close-icon
  position absolute
  top 10px
  right 0
  padding 25px;
  color $black
  transition color ease 1s

  .nav-open &
    color $white

.nav-link
  display: block
  padding 12px 4px
  color $black
  transition color ease 1s

  .nav-open &
    color $white

.social-nav
  margin-top 26px

.nav-link-social
  float left
  font-specs(0,0)

.social-icon
  display: block
  width 32px
  height 32px
  padding 4px
  color $black
  font-size: 32px;
  transition color ease 1s

  .nav-open &
    color darken($white, 52%)
    transition color ease 0.25s

.nav-link-social:hover .social-icon
  color $white
