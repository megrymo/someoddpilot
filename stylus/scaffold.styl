@font-face {
  font-family: 'sop-fontello';
  src: url('/assets/font/sop-fontello.eot?3791079');
  src: url('/assets/font/sop-fontello.eot?3791079#iefix') format('embedded-opentype'),
       url('/assets/font/sop-fontello.woff?3791079') format('woff'),
       url('/assets/font/sop-fontello.ttf?3791079') format('truetype'),
       url('/assets/font/sop-fontello.svg?3791079#sop-fontello') format('svg');
  font-weight: normal;
  font-style: normal;
}

 [class^="icon-"]:before, [class*=" icon-"]:before {
  font-family: "sop-fontello";
  font-style: normal;
  font-weight: normal;
  speak: none;

  display: inline-block;
  text-decoration: none;
  text-align: center;

  /* For safety - reset parent styles, that can break glyph codes*/
  font-variant: normal;
  text-transform: none;

  /* fix buttons height, for twitter bootstrap */
  line-height: 1em;
}

.icon-play:before { content: '\e800'; } /* '' */
.icon-close-x:before { content: '\e801'; } /* '' */
.icon-arrow-right:before { content: '\e802'; } /* '' */
.icon-arrow-left:before { content: '\e803'; } /* '' */
.icon-vimeo:before { content: '\e804'; } /* '' */
.icon-twitter:before { content: '\e805'; } /* '' */
.icon-sop-logo:before { content: '\e806'; } /* '' */
.icon-instagram:before { content: '\e807'; } /* '' */
.icon-facebook:before { content: '\e808'; }

html, body
  height: 100%;
  width 100%

body
  width 100%
  margin 0
  padding 0
  font-family sop-serif
  -webkit-font-smoothing: antialiased;

.sr {
  position: absolute;
  width: 1px;
  height: 1px;
  border: 0;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
}

.top-header
  z-index 5

.content
  position relative
  z-index 1

.full
  width 100%
  height auto
  clearfix()

.full-height
  min-height 100vh
  position relative

.contained,
.contained-smaller
  display: block
  position relative
  width 90%
  height auto
  max-width ($content-width + $vert-gutter)px
  margin 0 auto
  overflow hidden
  clear both

.contained-smaller
  width 64%
  max-width ($content-width)px
  max-width ($content-width * 0.7)px

@media screen and (max-width: (($content-width / 0.9) + $vert-gutter + $vert-gutter)px)
  .contained
    width 90%

@media screen and (max-width: (($content-width / 0.7) + $vert-gutter + $vert-gutter)px)
  .contained-smaller
    width 80%

.center-block
  margin 0 auto
  display: block

.left
  left 0
  float left

.right
  right 0
  float right

.half,
.third,
.quarter,
.add-lr-margin
  margin-left ((($vert-gutter / 2 ) / $content-width) * 100) %
  margin-right ((($vert-gutter / 2 ) / $content-width) * 100) %

  height auto

  vertical-align middle

.half
  width ((($content-width - ($vert-gutter * 2 )) / $content-width) * 50)%
  display inline-block

.eighty
  width 80%
  height auto

.sixty
  width 60%
  height auto

.fourty
  width 40%
  height auto

.third
  width ((($content-width - ($vert-gutter * 3 )) / $content-width) * 33.333) %

.quarter
  width ((($content-width - ($vert-gutter * 4 )) / $content-width) * 25) %

.bottom-gutter
  margin-bottom ($hr-gutter)px

.small-bottom-gutter
  margin-bottom ($hr-gutter / 2)px

.big-bottom-gutter
  margin-bottom ($big-gutter)px

.top-gutter
  margin-top ($hr-gutter)px

.small-top-gutter
  margin-top ($hr-gutter / 2)px

.big-top-gutter
  margin-top ($big-gutter)px

.background-fill
  position: absolute;
  top: 0;
  left: 0;

.bgwidth
  width: 100%
  height auto

.bgheight
  height: 100%
  width auto

.big-caption,
.grey-caption
  clear both

.image-hover .block-image
  transition 0.5s all ease
  &:hover
    opacity: 0.8

.page-subheader
  margin (avg($hr-gutter $big-gutter) / 2)px 0

.vert-center
  vert-center()
  padding-top 10%
  padding-bottom 10%

.absolute-center
  absolute-center()
  padding-top 10%
  padding-bottom 10%
