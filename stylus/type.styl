.center-align
  text-align: center

.left-align
  text-align: left

.right-align
  text-align: right

.white-text
  color #fff

.black-text
  color $black

.sans
  font-family: $sop-sans
  font-weight: bold
  text-transform: uppercase
  line-height (30/22)em

.display-serif
  font-family: $sop-display-serif
  line-height (66/49)em

.serif
  font-family: $sop-serif
  line-height (40/24)em

.main-nav,
.page-subheader,
.news-title,
.work-section-header,
.work-section-subheader
  @extend .sans
  font-specs(22, 30, 200)

.work-section-body
  @extend .serif

.main-nav
  font-specs(14, 14, 200)

.nav-link
  text-decoration none
  text-transform: uppercase

.page-title
  display: none

.page-subheader
  text-align: center
  font-specs(20, 30, 200)

.mega-slide-text
  display: inline-block
  font-specs(90, 135, 200)
  text-shadow 0 0 75px rgba(0, 0, 0, 0.15)

.work-block
  @extend .display-serif
  color $black

.block-header,
.block-subheader
  text-decoration none !important
  color $black

.block-header
  font-specs(49, 66, 50)

.block-subheader
  font-specs(30, 40, 50)

.block-link
  font-family: "Georgia", Georgia, serif
  font-specs(18, 18, 200)
  font-weight: bold
  text-transform: uppercase
  text-decoration: none;
  border-bottom: 1px solid $black;
  color $black
  cursor pointer

.work-section-header
  font-specs(70, 90, 150)
  text-align: center

.work-section-subheader
  font-specs(28, 50, 150)
  text-align: center

.work-section-body
  font-specs(24, 40)

.news-title
  color $black
  font-specs(22, 30, 100)
  text-decoration none
  cursor pointer

.news-snippet,
.news-date
  font-specs(20, 30)

.news-date
  font-style: italic

.drop-cap:first-letter
  float: left
  font-size: 4em
  line-height: .5em
  padding-right 0.02em

.scale-text
  display: inline-block
  transform-origin: top
